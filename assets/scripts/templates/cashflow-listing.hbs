<h1>BUDGET ITEM LIST</h1>
{{#each cashflows as |cashflow|}}

  <ul data-id={{cashflow.id}}></ul>
  <li>
    {{cashflow.id}}
    NAME= {{cashflow.name}}
    VALUE= {{cashflow.value}}
  </li>
  <form class="update-cashflow">
    <fieldset>
      <input type="submit" name="submit" value="Update">
      <input type="number" name='cashflow[id]' class="input" value={{cashflow.id}}>
      <input type="text" name='cashflow[name]' class="input" value={{cashflow.name}}>
      <input type="number" name='cashflow[value]' class="input" value={{cashflow.value}}>
    </fieldset>
  </form>
  <form class='delete-cashflow'>
    <fieldset>
      <input type="submit" name="submit" value="delete">
      <input type="number" name='cashflow[id]' class="input" value={{cashflow.id}}>
    </fieldset>
  </form>
{{/each}}
